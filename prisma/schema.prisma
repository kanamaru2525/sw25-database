generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- 認証モデル ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  discordId     String?   @unique
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  presets       RegulationPreset[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Enumの修正（改行区切りに！） ---

enum MagisphereSize {
  LARGE   // 大
  MEDIUM  // 中
  SMALL   // 小
}

enum RegulationType {
  TYPE_I   @map("Ⅰ")
  TYPE_II  @map("Ⅱ")
  TYPE_III @map("Ⅲ")
  DX
  ET
  ML
  MA
  BM
  AL
  RL
  BR
  BS
  AB
  BI
  DD
  US
  TS
  AZ
}

enum Rank {
  B
  A
  S
  SS
}

enum SpellType {
  SHINGO
  SOREI
  SHINCHI
  SHINSEI
  MADOKI
  YOSEI
  SHINRA
  SHOI
  NARAKU
  HIOU
}

enum FeatType {
  PASSIVE
  MAJOR
  DECLARATION
}

enum ItemType {
  WEAPON
  ARMOR
  ACCESSORY
}

enum SkillCategory {
  ENHANCER
  BARD_SONG
  BARD_FINALE
  RIDER
  ALCHEMIST
  GEOMANCER
  WARLEADER_KOUHAI
  WARLEADER_JINRITSU
  DARKHUNTER
}

enum FieldType {
  BOOLEAN
  TEXT
  NUMBER
  SELECT
  TEXTAREA
}

// --- SW2.5 モデル ---

model RegulationPreset {
  id          String           @id @default(cuid())
  name        String
  userId      String
  regulations RegulationType[]
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Spell {
  id              String         @id @default(cuid())
  name            String
  type            SpellType
  level           Int
  target          String
  range           String
  shape           String
  duration        String
  resistance      String
  cost            String
  attribute       String?
  fairyAttributes String[]
  deity           String?        // 神聖魔法の信仰する神
  biblioRank      Int?
  summary         String          @db.Text
  magisphere      MagisphereSize? // マギスフィア（魔動機術用）
  page            String
  regulation      RegulationType
}


model CombatFeat {
  id            String         @id @default(cuid())
  name          String
  type          FeatType
  requirement   String?
  target        String?
  risk          String?
  summary       String         @db.Text
  page          String
  regulation    RegulationType
  vagrancy      Boolean        @default(false)
}

// カテゴリー設定管理
model SkillCategoryConfig {
  id            String             @id @default(cuid())
  code          SkillCategory      @unique
  name          String
  order         Int
  customFields  SkillFieldConfig[]
  skills        SpecialSkill[]
  
  @@index([order])
}

// カテゴリー別カスタムフィールド設定
model SkillFieldConfig {
  id          String              @id @default(cuid())
  categoryId  String
  fieldKey    String              // "hasSinging", "pet", "condition" など
  fieldLabel  String              // "歌唱", "ペット", "条件" など
  fieldType   FieldType           // BOOLEAN, TEXT, NUMBER, SELECT, TEXTAREA
  placeholder String?             // 入力例
  options     Json?               // selectの場合の選択肢 ["有", "無"]
  order       Int                 // 表示順
  required    Boolean             @default(false)
  category    SkillCategoryConfig @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@unique([categoryId, fieldKey])
  @@index([categoryId, order])
}

// その他技能
model SpecialSkill {
  id            String              @id @default(cuid())
  categoryCode  SkillCategory       // enumのまま（既存との互換性）
  level         Int?                // レベル（オプショナルに変更）
  name          String              // 名前 *
  summary       String              @db.Text // 概要 *
  page          String              // ページ *
  regulation    RegulationType      // レギュレーション *
  
  // よく使う共通項目
  duration      String?             // 持続時間
  resistance    String?             // 抵抗
  cost          String?             // コスト
  attribute     String?             // 属性
  target        String?             // 対象
  rangeShape    String?             // 射程/形状
  
  // カテゴリー固有の動的フィールド（JSON形式）
  customFields  Json?               // { "hasSinging": true, "condition": "なし", ... }
  
  // リレーション
  category      SkillCategoryConfig @relation(fields: [categoryCode], references: [code])
  
  @@index([categoryCode])
  @@index([regulation])
}



// --- 統吁EtemモチE�� ---
model Item {
  id            String          @id @default(cuid())
  itemType      ItemType
  name          String
  category      String?
  rank          Rank?
  usage         String?
  minStrength   Int?
  
  // 武器専用
  hit           Int?
  power         Int?
  critical      Int?
  extraDamage   Int?
  range         Int?
  
  // 防具専用
  evasion       Int?
  defense       Int?
  
  // 共送E
  price         Int
  summary       String          @db.Text
  page          String
  regulation    RegulationType
  
  @@index([itemType])
  @@index([regulation])
}

// --- 神の管理 ---
model Deity {
  id        String   @id @default(cuid())
  name      String   @unique
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- レギュレーションの管理 ---
model RegulationConfig {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  order       Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
