generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- 認証モデル ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  discordId     String?   @unique
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  presets       RegulationPreset[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Enumの修正（改行区切りに！） ---

enum MagisphereSize {
  LARGE   // 大
  MEDIUM  // 中
  SMALL   // 小
}

enum Rank {
  B
  A
  S
  SS
}

enum SpellType {
  SHINGO
  SOREI
  SHINCHI
  SHINSEI
  MADOKI
  YOSEI
  SHINRA
  SHOI
  NARAKU
  HIOU
}

enum FeatType {
  PASSIVE
  MAJOR
  DECLARATION
}

enum ItemType {
  WEAPON
  ARMOR
  ACCESSORY
}

// --- SW2.5 モデル ---

model RegulationPreset {
  id          String           @id @default(cuid())
  name        String
  userId      String
  regulations String[]
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Spell {
  id              String         @id @default(cuid())
  name            String
  type            SpellType
  level           Int
  target          String
  range           String
  shape           String
  duration        String
  resistance      String
  cost            String
  attribute       String?
  fairyAttributes String[]
  deity           String?        // 神聖魔法の信仰する神
  biblioRank      Int?
  summary         String          @db.Text
  magisphere      MagisphereSize? // マギスフィア（魔動機術用）
  page            String
  regulation      String
}


model CombatFeat {
  id            String         @id @default(cuid())
  name          String
  type          FeatType
  requirement   String?
  target        String?
  risk          String?
  summary       String         @db.Text
  page          String
  regulation    String
  vagrancy      Boolean        @default(false)
}

// カテゴリー設定管理
model SkillCategoryConfig {
  id     String             @id @default(uuid())
  code   String             @unique
  name   String
  order  Int                @default(0)
  fields SkillFieldConfig[]
  skills SpecialSkill[]

  @@index([order])
}

// カテゴリー別カスタムフィールド設定
model SkillFieldConfig {
  id          String              @id @default(uuid())
  categoryId  String
  category    SkillCategoryConfig @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  fieldKey    String              // JSONの保存キー ("instr" 等)
  fieldLabel  String              // UI上の表示ラベル ("演奏楽器" 等)
  fieldType   String              // "text", "number", "boolean" 等
  placeholder String?             // 入力ヒント
  options     Json?               // selectの場合の選択肢 ["有", "無"]
  order       Int                 @default(0)
  required    Boolean             @default(false)

  @@unique([categoryId, fieldKey])
  @@index([categoryId, order])
}

// その他技能
model SpecialSkill {
  id           String   @id @default(uuid())
  name         String
  categoryCode String   // ENHANCER, BARD_SONG 等の識別コードを保存
  level        Int?
  regulation   String   // String型で管理画面の設定値と紐付け
  summary      String
  page         String
  duration     String?
  resistance   String?
  cost         String?
  attribute    String?
  target       String?
  rangeShape   String?
  customFields Json?    // カテゴリ固有の値を { "key": "value" } 形式で保存

  category SkillCategoryConfig @relation(fields: [categoryCode], references: [code])

  @@index([categoryCode])
  @@index([regulation])
}



// --- 統吁EtemモチE�� ---
model Item {
  id            String          @id @default(cuid())
  itemType      ItemType
  name          String
  category      String?
  rank          Rank?
  usage         String?
  minStrength   Int?
  
  // 武器専用
  hit           Int?
  power         Int?
  critical      Int?
  extraDamage   Int?
  range         Int?
  
  // 防具専用
  evasion       Int?
  defense       Int?
  
  // 共送E
  price         Int
  summary       String          @db.Text
  page          String
  regulation    String
  
  @@index([itemType])
  @@index([regulation])
}

// --- 神の管理 ---
model Deity {
  id        String   @id @default(cuid())
  name      String   @unique
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- レギュレーションの管理 ---
model RegulationConfig {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  order       Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
